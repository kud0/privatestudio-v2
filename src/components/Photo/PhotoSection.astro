---
// Plain photo section
interface Props {
  imageUrl?: string;
  alt?: string;
}

const {
  imageUrl = "/images/privatestudio-crew.jpg",
  alt = "PrivateStudio Barbershop Team"
} = Astro.props;
---

<section class="photo-section">
  <div class="photo-container">
    <img src={imageUrl} alt={alt} loading="lazy" />
  </div>
</section>

<style>
  .photo-section {
    position: relative;
    width: 100%;
    background-color: #5a5a5a;
    padding: 0 5rem 4rem;
  }

  .photo-container {
    max-width: 1600px;
    margin: 0 auto;
    width: 100%;
    overflow: hidden;
  }

  .photo-container img {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
    filter: saturate(0.7);
  }

  @media (max-width: 768px) {
    .photo-section {
      padding: 0 0 3rem 0;
    }

    .photo-container img {
      aspect-ratio: 16/9;
    }
  }
</style>
