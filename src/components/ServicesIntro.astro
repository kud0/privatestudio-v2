---
// ServicesIntro.astro
// Services Introduction Section - Two-column layout with sticky heading
// Matches AMIRO structure: Left portrait + Right sticky text + portrait
---

<section id="services-intro" class="services-intro-section">
  <div class="services-intro-container">
    <!-- Left Column: Large Portrait Image -->
    <div class="services-intro-left">
      <img
        src="/images/image-for-export-777x1024.jpg"
        alt="Portrait"
        class="services-intro-image"
        loading="lazy"
      />
    </div>

    <!-- Right Column: Sticky Heading + Second Image -->
    <div class="services-intro-right">
      <!-- Sticky Heading (Desktop Only) -->
      <div class="services-intro-heading-wrapper">
        <h2 class="services-intro-heading">
          humans in mirror are braver than they appear
        </h2>
      </div>

      <!-- Second Portrait Image -->
      <div class="services-intro-image-wrapper">
        <img
          src="/images/image-for-exports-777x1024.jpg"
          alt="Portrait"
          class="services-intro-image"
          loading="lazy"
        />
      </div>
    </div>
  </div>
</section>

<style>
  .services-intro-section {
    width: 100%;
    padding: 4rem 1.5rem;
  }

  .services-intro-container {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    gap: 2rem;
  }

  /* Desktop Layout: Two-Column Grid */
  @media (min-width: 768px) {
    .services-intro-container {
      grid-template-columns: 1fr 1fr;
      gap: 3rem;
      align-items: start;
    }
  }

  /* Left Column */
  .services-intro-left {
    width: 100%;
  }

  /* Right Column */
  .services-intro-right {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  /* Sticky Heading Wrapper */
  .services-intro-heading-wrapper {
    width: 100%;
  }

  @media (min-width: 768px) {
    .services-intro-heading-wrapper {
      position: sticky;
      top: 150px;
      z-index: 10;
    }
  }

  /* Sticky Heading */
  .services-intro-heading {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 300;
    line-height: 1.3;
    color: var(--text-primary, #1a1a1a);
    margin: 0;
    padding: 1rem 0;
  }

  /* Hide sticky heading on mobile */
  @media (max-width: 767px) {
    .services-intro-heading-wrapper {
      display: none;
    }
  }

  /* Images */
  .services-intro-image {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  .services-intro-image-wrapper {
    width: 100%;
  }

  /* Mobile Layout: Single Column */
  @media (max-width: 767px) {
    .services-intro-container {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .services-intro-right {
      gap: 0;
    }
  }

  /* Responsive Padding */
  @media (min-width: 1024px) {
    .services-intro-section {
      padding: 6rem 2rem;
    }
  }

  /* Dark Mode Support */
  @media (prefers-color-scheme: dark) {
    .services-intro-heading {
      color: var(--text-primary-dark, #ffffff);
    }
  }
</style>
