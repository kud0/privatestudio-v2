<style>
  .scrolling-text-section {
    position: relative;
    width: 100%;
    background-color: #5a5a5a;
    padding: 0;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    border-top: none;
  }

  .text-line-wrapper {
    position: relative;
    width: 100%;
    overflow: hidden;
    white-space: nowrap;
    background-color: #5a5a5a;
    padding: 1rem 0;
    border: none;
  }

  .text-line {
    display: inline-flex;
    align-items: center;
    white-space: nowrap;
    will-change: transform;
  }

  .text-content {
    display: inline-block;
    font-family: 'Bebas Neue', sans-serif;
    font-size: 2rem;
    font-weight: 400;
    letter-spacing: 0.2em;
    color: #FDFDFD;
    padding: 0 3rem;
  }

  .separator {
    display: inline-block;
    color: rgba(255, 255, 255, 0.4);
    font-size: 2rem;
    font-weight: 300;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .scrolling-text-section {
      gap: 0rem;
    }

    .text-line-wrapper {
      padding: 1rem 0;
    }

    .text-content {
      font-size: 1.5rem;
      padding: 0 1rem;
    }

    .separator {
      font-size: 1.5rem;
    }
  }
</style>

<script>
  // Scroll-triggered movement in opposite directions - infinite effect
  let lastScrollY = 2000;
  let leftX = -800; // Start offset to fill left edge
  let rightX = -300; // Start offset to fill left edge

  window.addEventListener('scroll', () => {
    const scrollY = window.scrollY;
    const delta = scrollY - lastScrollY;

    // First line moves left (negative direction)
    leftX -= delta * 0.75;

    // Second line moves right (positive direction)
    rightX += delta * 0.5;

    const lineLeft = document.querySelector('#line-left .text-line') as HTMLElement;
    const lineRight = document.querySelector('#line-right .text-line') as HTMLElement;

    if (lineLeft) {
      lineLeft.style.transform = `translateX(${leftX}px)`;
    }

    if (lineRight) {
      lineRight.style.transform = `translateX(${rightX}px)`;
    }

    lastScrollY = scrollY;
  });

  // Initialize both lines position for infinite effect with no gaps
  window.addEventListener('DOMContentLoaded', () => {
    const lineLeft = document.querySelector('#line-left .text-line') as HTMLElement;
    const lineRight = document.querySelector('#line-right .text-line') as HTMLElement;

    if (lineLeft) {
      lineLeft.style.transform = `translateX(${leftX}px)`;
    }

    if (lineRight) {
      lineRight.style.transform = `translateX(${rightX}px)`;
    }
  });
</script>
