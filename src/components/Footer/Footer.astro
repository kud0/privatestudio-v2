<style>
  .footer {
    position: relative;
    width: 100%;
    background-color: #5a5a5a;
  }

  .footer-container {
    max-width: 1600px;
    margin: 0 auto;
    padding: 0 5rem;
  }

  /* Header with contact and follow us */
  .footer-header {
    position: relative;
    padding: 4rem 0 2rem;
  }

  .footer-header .footer-container {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }

  .footer-heading {
    font-family: 'Bicyclette', 'Bebas Neue', sans-serif;
    font-size: clamp(100px, 15vw, 200px);
    font-weight: 700;
    line-height: 0.8;
    letter-spacing: 0.15em;
    color: #1a1a1a;
    margin: 0;
  }

  .follow-us {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 1rem;
  }

  .follow-text {
    font-family: 'Inter', sans-serif;
    font-size: 1rem;
    letter-spacing: 0.1em;
    color: #1a1a1a;
    text-transform: lowercase;
  }

  .social-links {
    display: flex;
    gap: 0.75rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border: 1px solid #1a1a1a;
    background-color: #1a1a1a;
    color: #FDFDFD;
    transition: all 0.3s ease;
  }

  .social-link:hover {
    background-color: #000000;
    border-color: #000000;
    transform: translateY(-2px);
  }

  /* Main content - LIGHTER BOX */
  .footer-content {
    background-color: #a8a8a8;
    border-top: 3px solid #1a1a1a;
    padding: 3rem 0;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 0.8fr 1.1fr 1.1fr;
    gap: 4rem;
  }

  .footer-column {
    position: relative;
  }

  .footer-column:not(:last-child)::after {
    content: '';
    position: absolute;
    right: -2rem;
    top: 0;
    bottom: 0;
    width: 3px;
    background-color: #1a1a1a;
  }

  /* Logo */
  .footer-logo {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    height: 100%;
  }

  .logo-text {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 2.5rem;
    font-weight: 600;
    letter-spacing: 0.5rem;
    color: #1a1a1a;
    line-height: 1;
  }

  .logo-subtitle {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 1.5rem;
    font-weight: 100;
    letter-spacing: 0.5rem;
    color: #1a1a1a;
  }

  /* Column content */
  .column-heading {
    font-family: 'Courier New', 'Courier', monospace;
    font-size: 1.25rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    color: #1a1a1a;
    margin: 0 0 1.5rem 0;
    text-transform: uppercase;
  }

  .hours-list,
  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .hours-item {
    display: flex;
    flex-direction: row;
    gap: 1rem;
    align-items: baseline;
  }

  .day {
    font-family: 'Courier New', 'Courier', monospace;
    font-size: 1rem;
    font-weight: 600;
    color: #1a1a1a;
  }

  .time {
    font-family: 'Courier New', 'Courier', monospace;
    font-size: 1.25rem;
    color: #1a1a1a;
  }

  .contact-info p {
    font-family: 'Courier New', 'Courier', monospace;
    font-size: 1.25rem;
    color: #1a1a1a;
    margin: 0;
    line-height: 1.6;
  }

  /* Bottom bar - DARKEST */
  .footer-bottom {
    background-color: #2a2a2a;
    border-top: 3px solid #1a1a1a;
    padding: 2rem 0;
  }

  .bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .bottom-left,
  .bottom-right {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .accessibility-icon {
    width: 35px;
    height: 35px;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.1);
    border: 1px solid #FDFDFD;
    color: #FDFDFD;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .accessibility-icon:hover {
    background-color: #FDFDFD;
    color: #2a2a2a;
  }

  .copyright,
  .footer-link,
  .powered,
  .divider {
    font-family: 'Inter', sans-serif;
    font-size: 1rem;
    color: #FDFDFD;
    letter-spacing: 0.05em;

  }

  .footer-link {
    text-decoration: none;
    transition: opacity 0.3s ease;
  }

  .footer-link:hover {
    opacity: 0.7;
  }

  .language-selector {
    width: 35px;
    height: 35px;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.1);
    border: 1px solid #ffffff;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .language-selector:hover {
    background-color: #FDFDFD;
  }

  .flag-icon {
    font-size: 2.25rem;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .footer-grid {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .footer-column:not(:last-child)::after {
      display: none;
    }
  }

  @media (max-width: 768px) {
    .footer-container {
      padding: 0 1.5rem;
    }

    .footer-header .footer-container {
      flex-direction: column;
      gap: 2rem;
    }

    .follow-us {
      align-items: flex-start;
    }

    .footer-heading {
      font-size: clamp(60px, 15vw, 100px);
    }

    .bottom-content {
      flex-direction: column;
      gap: 1.5rem;
      align-items: flex-start;
    }

    .bottom-left,
    .bottom-right {
      flex-wrap: wrap;
      gap: 1rem;
    }
  }
</style>
