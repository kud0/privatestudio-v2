---
import ScrollingMarquee from './ScrollingMarquee.astro';
---

<section class="amiro-hero">
  <!-- Hero Content Container -->
  <div class="hero-content-wrapper">
    <!-- Main Hero Content -->
    <div class="hero-content">
      <!-- Large "BOOK NOW" Text - Positioned High -->
      <div class="hero-text-large">
        <h1>
          <span class="text-line">book</span>
          <span class="text-line">now</span>
        </h1>
      </div>

      <!-- Right Side CTA Text -->
      <div class="hero-cta-right">
        <a href="#booking" class="cta-box">
          SCHEDULE YOUR<br />HAIRCUT TODAY &gt;
        </a>
      </div>

      <!-- Two Vertical Images with Stagger Effect -->
      <div class="hero-images">
        <div class="hero-image-left-wrapper">
          <div class="hero-image-container hero-image-left">
            <img
              src="https://images.unsplash.com/photo-1585747860715-2ba37e788b70?w=600&h=800&fit=crop"
              alt="Barbershop interior with vintage styling chairs"
              loading="lazy"
            />
          </div>
          <div class="hero-image-text">
            <p>STYLE IS<br />PERSONAL<br />EXCELLENCE</p>
          </div>
        </div>
        <div class="hero-image-container hero-image-right">
          <img
            src="https://images.unsplash.com/photo-1503951914875-452162b0f3f1?w=600&h=800&fit=crop"
            alt="Professional barber cutting client's hair"
            loading="lazy"
          />
        </div>
      </div>
    </div>

    <!-- Corner Elements -->
    <div class="corner-elements">
      <!-- Bottom Left: Accessibility Icon -->
      <button class="accessibility-icon" aria-label="Accessibility Options">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10"></circle>
          <circle cx="12" cy="8" r="1.5"></circle>
          <path d="M12 10v4"></path>
          <path d="M8 13h8"></path>
          <path d="M10 17l2-1 2 1"></path>
        </svg>
      </button>

      <!-- Bottom Right: Language Selector -->
      <button class="language-selector" aria-label="Change Language">
        <span class="flag-icon">ðŸ‡¬ðŸ‡§</span>
      </button>
    </div>
  </div>

  <!-- Bottom Scrolling Marquee -->
  <ScrollingMarquee />
</section>

<style>
  .amiro-hero {
    position: relative;
    width: 100%;
    min-height: auto;
    overflow-x: hidden;
    overflow-y: visible;
    background-color: #5a5a5a;
    padding-bottom: 20rem;
  }

  /* Hero Content Wrapper */
  .hero-content-wrapper {
    position: relative;
    width: 100%;
    min-height: auto;
    padding-bottom: 2rem;
  }

  /* Main Hero Content */
  .hero-content {
    position: relative;
    z-index: 20;
    display: flex;
    flex-direction: column;
    padding: 0 5rem;
    max-width: 1600px;
    margin: 0 auto;
  }

  /* Large Text - Positioned High */
  .hero-text-large {
    padding-top: 8rem;
    margin-bottom: 2rem;
  }

  .hero-text-large h1 {
    margin: 0;
    padding: 0;
    line-height: 0.75;
  }

  /* Right Side CTA Text */
  .hero-cta-right {
    position: absolute;
    top: 25%;
    right: 5rem;
    transform: translateY(-50%);
    z-index: 25;
  }

  .cta-box {
    display: inline-block;
    padding: 0;
    border: none;
    color: #ffffff;
    font-family: 'Bebas Neue', sans-serif;
    font-size: 2.5rem;
    font-weight: 400;
    letter-spacing: 0.15em;
    text-align: right;
    line-height: 1.4;
    transition: all 0.3s ease;
    background-color: transparent;
  }

  .cta-box:hover {
    opacity: 0.8;
    transform: translateX(5px);
  }

  .text-line {
    display: block;
    font-family: 'Bicyclette', 'Bebas Neue', 'Impact', 'Arial Black', sans-serif;
    font-size: clamp(140px, 18vw, 250px);
    font-weight: 700;
    color: #1a1a1a;
    letter-spacing: 0.15em;
  }

  /* Two Vertical Images with Stagger */
  .hero-images {
    display: flex;
    gap: 2rem;
    justify-content: flex-start;
    align-items: flex-start;
    margin-bottom: 4rem;
  }

  .hero-image-container {
    position: relative;
    flex-shrink: 0;
    width: 45vw;
    min-width: 500px;
    height: 75vh;
    min-height: 600px;
    overflow: hidden;
    border-radius: 8px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
  }

  .hero-image-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* Left Image Wrapper */
  .hero-image-left-wrapper {
    display: flex;
    flex-direction: column;
    margin-top: -60px;
  }

  /* Image Text Below Left Image */
  .hero-image-text {
    margin-top: 2rem;
    color: #ffffff;
  }

  .hero-image-text p {
    font-family: 'Bebas Neue', sans-serif;
    font-size: clamp(2rem, 4vw, 4rem);
    font-weight: 400;
    line-height: 1;
    letter-spacing: 0.05em;
    margin: 0;
    text-align: left;
  }

  /* Stagger Effect */
  .hero-image-left {
    margin-top: 0;
  }

  .hero-image-right {
    margin-top: 100px;
  }

  /* Corner Elements */
  .corner-elements {
    position: fixed;
    bottom: 2rem;
    left: 0;
    right: 0;
    z-index: 60;
    padding: 0 3rem;
    display: flex;
    justify-content: space-between;
    pointer-events: none;
  }

  .accessibility-icon,
  .language-selector {
    width: 45px;
    height: 45px;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.3);
    color: white;
    cursor: pointer;
    transition: all 0.3s ease;
    pointer-events: auto;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .accessibility-icon:hover,
  .language-selector:hover {
    background-color: rgba(255, 255, 255, 0.25);
    transform: scale(1.1);
  }

  .flag-icon {
    font-size: 1.5rem;
  }

  /* Responsive */
  @media (max-width: 1200px) {
    .hero-content {
      padding: 0 3rem;
    }

    .hero-image-container {
      width: 450px;
      min-height: 350px;
    }

    .hero-image-right {
      margin-top: 80px;
    }

    .hero-cta-right {
      right: 3rem;
    }

    .cta-box {
      padding: 1.5rem 2rem;
      font-size: 1rem;
    }
  }

  @media (max-width: 768px) {
    .hero-content {
      padding: 0 1.5rem;
    }

    .hero-text-large {
      padding-top: 6rem;
      margin-bottom: 2rem;
    }

    .text-line {
      font-size: clamp(80px, 20vw, 120px);
    }

    .hero-cta-right {
      position: static;
      transform: none;
      margin: 2rem 0;
      text-align: center;
    }

    .cta-box {
      padding: 1.25rem 1.5rem;
      font-size: 0.875rem;
    }

    .hero-images {
      flex-direction: column;
      gap: 2rem;
      margin-bottom: 8rem;
      align-items: center;
    }

    .hero-image-container {
      width: 100%;
      height: 45vh;
      min-height: 300px;
      max-height: 450px;
    }

    .hero-image-left-wrapper {
      margin-top: 0;
    }

    .hero-image-left,
    .hero-image-right {
      margin-top: 0;
    }

    .hero-image-text p {
      font-size: clamp(1.5rem, 5vw, 2.5rem);
    }

    .corner-elements {
      bottom: 6rem;
      padding: 0 1.5rem;
    }

    .accessibility-icon,
    .language-selector {
      width: 40px;
      height: 40px;
    }
  }

  @media (max-width: 480px) {
    .text-line {
      font-size: clamp(60px, 18vw, 90px);
    }

    .hero-images {
      gap: 1.5rem;
    }

    .hero-image-container {
      height: 40vh;
      min-height: 280px;
    }
  }
</style>
