<style>
  .top-navigation {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    padding: 1.5rem 5rem;
    background-color: #5a5a5a;
  }

  .top-navigation::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 95%;
    max-width: 1600px;
    height: 2.5px;
    background-color: #222222;
  }

  /* Social Icons */
  .social-icons {
    display: flex;
    gap: 0.75rem;
    justify-content: flex-start;
  }

  .social-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border: 2.5px solid #222222;
    background-color: #222222;
    color: #FDFDFD;
    transition: all 0.3s ease;
  }

  .social-icon:hover {
    background-color: #000000;
    border-color: #000000;
    transform: translateY(-2px);
  }

  /* Logo */
  .logo {
    text-transform: uppercase;
    text-align: center;
    grid-column: 2;
  }

  .logo a {
    display: flex;
    align-items: center;
    text-decoration: none;
    transition: opacity 0.3s ease;
  }

  .logo-image {
    height: 50px;
    width: auto;
    display: block;
  }

  .logo a:hover {
    opacity: 0.8;
  }

  /* CTA Buttons */
  .cta-buttons {
    display: flex;
    gap: 0.75rem;
    justify-content: flex-end;
    grid-column: 3;
  }

  .cta-button {
    padding: 0.6rem 2rem;
    border-radius: 50px;
    font-family: 'Bebas Neue', sans-serif;
    font-size: 1.125rem;
    font-weight: 600;
    letter-spacing: 0em;
    text-decoration: none;
    transition: all 0.3s ease;
    border: 2.5px solid #222222;
    color: #222222;
    background-color: #FDFDFD;
    white-space: nowrap;
  }

  .cta-button.cta-primary {
    background-color: #FDFDFD;
    color: #222222;
    border-color: #222222;
  }

  .cta-button:hover {
    background-color: #e8e8e8;
  }

  .cta-button.cta-primary:hover {
    background-color: #e8e8e8;
  }

  /* Mobile Menu Toggle */
  .mobile-menu-toggle {
    display: none;
    flex-direction: column;
    gap: 10px;
    background: transparent;
    border: none;
    padding: 0;
    cursor: pointer;
  }

  .mobile-menu-toggle span {
    display: block;
    width: 35px;
    height: 3px;
    background-color: #222222;
    transition: all 0.3s ease;
  }

  .mobile-menu-toggle.active span:nth-child(1) {
    transform: rotate(45deg) translate(10px, 10px);
  }

  .mobile-menu-toggle.active span:nth-child(2) {
    opacity: 0;
  }

  .mobile-menu-toggle.active span:nth-child(3) {
    transform: rotate(-45deg) translate(9px, -9px);
  }

  /* Mobile Menu Overlay */
  .mobile-menu-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100vw;
    height: 100vh;
    height: 100dvh;
    background-color: #5a5a5a;
    z-index: 999;
    visibility: hidden;
    opacity: 0;
    transition: opacity 0.4s ease, visibility 0.4s;
    display: flex;
    overflow: hidden;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    backface-visibility: hidden;
  }

  .mobile-menu-overlay.active {
    visibility: visible;
    opacity: 1;
  }

  .mobile-menu-content {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 4rem;
    padding: 2rem;
    transform: translateY(20px);
    transition: transform 0.4s ease;
    backface-visibility: hidden;
    -webkit-font-smoothing: antialiased;
  }

  .mobile-menu-overlay.active .mobile-menu-content {
    transform: translateY(0);
  }

  .mobile-menu-buttons {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    align-items: center;
    width: 100%;
  }

  .mobile-menu-button {
    padding: 1rem 3rem;
    border-radius: 50px;
    font-family: 'Bebas Neue', sans-serif;
    font-size: 1.5rem;
    font-weight: 600;
    letter-spacing: 0.125em;
    text-decoration: none;
    transition: all 0.3s ease;
    border: 2.5px solid #222222;
    color: #222222;
    background-color: #FDFDFD;
    text-align: center;
    min-width: 250px;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    text-rendering: optimizeLegibility;
  }

  .mobile-menu-button:hover {
    background-color: #e8e8e8;
  }

  .mobile-menu-social {
    display: flex;
    gap: 1.5rem;
  }

  .mobile-social-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 50px;
    height: 50px;
    border: 2.5px solid #222222;
    background-color: #222222;
    color: #FDFDFD;
    transition: all 0.3s ease;
  }

  .mobile-social-icon:hover {
    background-color: #000000;
    border-color: #000000;
    transform: translateY(-2px);
  }

  /* Responsive - Gradual Shrinking */
  @media (max-width: 1440px) {
    .top-navigation {
      padding: 1.5rem 3rem;
    }

    .logo a {
      font-size: 2.25rem;
      letter-spacing: 0.45rem;
    }

    .cta-button {
      padding: 0.55rem 2rem;
      font-size: 1.125rem;
      letter-spacing: 0em;
    }

    .social-icon {
      width: 38px;
      height: 38px;
    }
  }

  @media (max-width: 1200px) {
    .top-navigation {
      padding: 1.25rem 2.5rem;
    }

    .logo a {
      font-size: 2rem;
      letter-spacing: 0.4rem;
    }

    .cta-button {
      padding: 0.5rem 1.75rem;
      font-size: 1.1rem;
      letter-spacing: 0em;
    }

    .social-icon {
      width: 36px;
      height: 36px;
    }

    .social-icons {
      gap: 0.6rem;
    }

    .cta-buttons {
      gap: 0.6rem;
    }
  }

  @media (max-width: 1024px) {
    .top-navigation {
      padding: 1.25rem 2rem;
    }

    .logo a {
      font-size: 1.85rem;
      letter-spacing: 0.35rem;
    }

    .cta-button {
      padding: 0.5rem 1.5rem;
      font-size: 1.05rem;
      letter-spacing: 0.1em;
    }

    .social-icon {
      width: 34px;
      height: 34px;
    }
  }

  /* Switch to Hamburger Menu */
  @media (max-width: 900px) {
    .top-navigation {
      display: flex;
      padding: 1.5rem 1rem;
      justify-content: space-between;
    }

    .top-navigation::after {
      width: 90%;
    }

    .social-icons {
      display: none;
    }

    .cta-buttons {
      display: none;
    }

    .logo {
      grid-column: auto;
      text-align: center;
      flex: 1;
      display: flex;
      justify-content: center;
    }

    .mobile-menu-toggle {
      display: flex;
      position: relative;
      right: 0;
      flex-shrink: 0;
    }
  }
</style>

<script>
  // Mobile menu toggle functionality
  document.addEventListener('DOMContentLoaded', () => {
    const menuToggle = document.querySelector('.mobile-menu-toggle');
    const menuOverlay = document.querySelector('.mobile-menu-overlay');
    const body = document.body;

    if (menuToggle && menuOverlay) {
      menuToggle.addEventListener('click', () => {
        // Toggle menu animation
        menuToggle.classList.toggle('active');
        menuOverlay.classList.toggle('active');

        // Prevent scrolling when menu is open
        if (menuOverlay.classList.contains('active')) {
          body.style.overflow = 'hidden';
        } else {
          body.style.overflow = '';
        }
      });

      // Close menu when clicking on a link
      const menuLinks = menuOverlay.querySelectorAll('a');
      menuLinks.forEach(link => {
        link.addEventListener('click', () => {
          menuToggle.classList.remove('active');
          menuOverlay.classList.remove('active');
          body.style.overflow = '';
        });
      });
    }
  });
</script>
