---
interface Props {
  name: string;
  photo: string;
  bookingUrl?: string;
}

const { name, photo, bookingUrl = "#booking" } = Astro.props;
---

<div class="team-member-card">
  <a href={bookingUrl} class="book-label">BOOK &gt;</a>
  <div class="card-content">
    <div class="member-photo">
      <img src={photo} alt={`${name} - PrivateStudio Barber`} loading="lazy" />
    </div>
    <div class="member-info">
      <div class="member-name">{name}</div>
    </div>
  </div>
</div>

<style>
  .team-member-card {
    position: relative;
    width: 100%;
  }

  .card-content {
    display: flex;
    border: 2.5px solid #222222;
    overflow: hidden;
    background-color: transparent;
  }

  /* Book Label - Sticks out on top-right */
  .book-label {
    position: absolute;
    top: -62px;
    right: 0px;
    z-index: 10;
    display: inline-block;
    padding: 1rem 1rem;
    background-color: #FDFDFD;
    color: #222222;
    font-family: 'Space Grotesk', sans-serif;
    font-size: 1.125rem;
    font-weight: 700;
    letter-spacing: 0.2em;
    text-decoration: none;
    transition: all 0.3s ease;
    border: 2.5px solid #222222;
  }

  .book-label:hover {
    background-color: #e8e8e8;
  }

  /* Left side - Photo */
  .member-photo {
    flex: 0 0 50%;
    aspect-ratio: 5/6;
    overflow: hidden;
    
  }

  .member-photo img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* Right side - Name */
  .member-info {
    flex: 0 0 35%;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1.5rem;
   
  }

  .member-name {
    font-family: 'Space Grotesk', sans-serif;
    font-size: clamp(1.75rem, 2.5vw, 2.75rem);
    font-weight: 700;
    letter-spacing: 0.2em;
    color: #222222;
    text-align: center;
  }

  @media (max-width: 768px) {
    .team-member-card {
      width: 100%;
      max-width: 600px;
      padding-right: 0em;
      margin-left: auto;
    }

    .card-content {
      flex-direction: column;
      border: 2.5px solid #222222;
      width: 100%;
    }

    .member-photo {
      flex: 0 0 auto;
      aspect-ratio: 1;
      width: 95%;
      justify-content: center;
      align-items: center;
      margin: auto;
    }

    .member-info {
      flex: 0 0 auto;
      padding: 0rem 0rem;
      
      min-height: 160px;
    }

    .member-name {
      font-size: 3.5rem;
    }

    .book-label {
      right: 0px;
      top: -45px;
      font-size: 1.5rem;
      padding: 0.75rem 1rem;
      border: 2.5px solid #222222;
      background-color: #FDFDFD;
    }
  }
</style>
