---
import TeamMemberCard from './TeamMemberCard.astro';

const teamMembers = [
  {
    name: "LUCA",
    photo: "https://images.unsplash.com/photo-1621605815971-fbc98d665033?w=400&h=600&fit=crop",
  },
  {
    name: "ADRIAN",
    photo: "https://images.unsplash.com/photo-1622287162716-f311baa1a2b8?w=400&h=600&fit=crop",
  },
  {
    name: "MARCO",
    photo: "https://images.unsplash.com/photo-1605497788044-5a32c7078486?w=400&h=600&fit=crop",
  },
  {
    name: "DAVID",
    photo: "https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=400&h=600&fit=crop",
  },
];
---

<section class="team-section">
  <div class="team-container">
    <!-- Left Column: Team heading + grid -->
    <div class="team-left-column">
      <div class="team-heading">
        <h2>team</h2>
      </div>

      <div class="team-grid">
        {teamMembers.map((member) => (
          <TeamMemberCard
            name={member.name}
            photo={member.photo}
          />
        ))}
      </div>
    </div>

    <!-- Right Column: Full-height divider with statement -->
    <div class="team-right-column">
      <div class="statement-divider">
        <p>WE<br />DON'T<br />DO<br />NORMAL</p>
      </div>
    </div>
  </div>
</section>

<style>
  .team-section {
    position: relative;
    width: 100%;
    min-height: auto;
    background-color: #5a5a5a;
    padding-bottom: 6rem;
    margin-top: -20rem;
  }

  .team-container {
    max-width: 1600px;
    margin: 0 auto;
    padding: 0 5rem;
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 4rem;
    position: relative;
  }

  /* Left Column */
  .team-left-column {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  /* Giant "team" heading */
  .team-heading h2 {
    font-family: 'Bicyclette', 'Bebas Neue', sans-serif;
    font-size: clamp(120px, 20vw, 280px);
    font-weight: 700;
    line-height: 0.8;
    letter-spacing: 0.15em;
    color: #1a1a1a;
    margin: 0 0 2rem 0;
  }

  /* Team Grid */
  .team-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 4rem 3rem;
  }

  /* Right Column - Full Height Divider */
  .team-right-column {
    display: flex;
    align-items: center;
    justify-content: center;
    border-left: 3px solid #1a1a1a;
    padding-left: 3rem;
    min-height: 100%;
  }

  .statement-divider {
    position: sticky;
    top: 50vh;
    transform: translateY(-50%);
  }

  .statement-divider p {
    font-family: 'Bebas Neue', sans-serif;
    font-size: clamp(3rem, 5vw, 5rem);
    font-weight: 400;
    line-height: 0.9;
    letter-spacing: 0.15em;
    color: #FDFDFD;
    margin: 0;
    text-align: center;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .team-container {
      gap: 3rem;
    }

    .team-grid {
      gap: 3rem 2rem;
    }

    .team-right-column {
      padding-left: 2rem;
    }

    .statement-divider p {
      font-size: clamp(2.5rem, 5vw, 4rem);
    }
  }

  @media (max-width: 768px) {
    .team-container {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .team-right-column {
      border-left: none;
      border-top: 2px solid rgba(255, 255, 255, 0.3);
      padding-left: 0;
      padding-top: 3rem;
      min-height: auto;
    }

    .statement-divider {
      position: static;
      transform: none;
    }

    .statement-divider p {
      font-size: clamp(2rem, 6vw, 3rem);
    }

    .team-grid {
      grid-template-columns: 1fr;
      gap: 3rem;
    }
  }
</style>
