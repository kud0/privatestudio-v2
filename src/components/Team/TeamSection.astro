---
import TeamMemberCard from './TeamMemberCard.astro';

const teamMembers = [
  {
    name: "RENI",
    photo: "/images/barber-reni.jpg",
    bookingUrl: "https://booksy.com/es-es/90283_private-studio_barberia_48863_barcelona/staffer/133063#ba_s=vl_1",
  },
  {
    name: "FELIPE",
    photo: "/images/barber-felipe.jpg",
    bookingUrl: "https://booksy.com/es-es/90283_private-studio_barberia_48863_barcelona/staffer/184011#ba_s=vl_1",
  },
  {
    name: "JOSE",
    photo: "/images/barber-jose.jpg",
    bookingUrl: "https://booksy.com/es-es/90283_private-studio_barberia_48863_barcelona/staffer/220870#ba_s=vl_1",
  },
  {
    name: "DANIEL",
    photo: "/images/barber-daniel.jpg",
    bookingUrl: "https://booksy.com/es-es/90283_private-studio_barberia_48863_barcelona/staffer/211065#ba_s=vl_1",
  },
];
---

<section class="team-section">
  <div class="team-container">
    <!-- Left Column: Team heading + grid -->
    <div class="team-left-column">
      <div class="team-heading">
        <h2>team</h2>
      </div>

      <div class="team-grid">
        {teamMembers.map((member) => (
          <TeamMemberCard
            name={member.name}
            photo={member.photo}
            bookingUrl={member.bookingUrl}
          />
        ))}
      </div>
    </div>

    <!-- Right Column: Full-height divider with statement -->
    <div class="team-right-column">
      <div class="statement-divider">
        <p>WE<br />DON'T<br />DO<br />NORMAL</p>
      </div>
    </div>
  </div>
</section>

<style>
  .team-section {
    position: relative;
    width: 100%;
    min-height: auto;
    background-color: #5a5a5a;
    padding-bottom: 6rem;
    margin-top: -20rem;
  }

  .team-container {
    max-width: 1600px;
    margin: 0 auto;
    padding: 0 5rem;
    display: grid;
    grid-template-columns: 10fr 0.08fr;
    gap: 4rem;
    position: relative;
  }

  /* Left Column */
  .team-left-column {
    display: flex;
    flex-direction: column;
    gap: 7rem;
  }

  /* Giant "team" heading */
  .team-heading h2 {
    font-family: 'Space Grotesk', sans-serif;
    font-size: clamp(120px, 20vw, 280px);
    font-weight: 700;
    line-height: 0.8;
    letter-spacing: 0.15em;
    color: #222222;
    margin: 0 0 2rem 0;
  }

  /* Team Grid */
  .team-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 6rem 3rem;
  }

  /* Right Column - Full Height Divider */
  .team-right-column {
    display: flex;
    align-items: center;
    justify-content: center;
    border-left: 2.5px solid #222222;
    padding-left: 2rem;
    min-height: 100%;
  }

  .statement-divider {
    position: sticky;
    top: 50vh;
    transform: translateY(-50%);
  }

  .statement-divider p {
    font-family: 'Space Grotesk', sans-serif;
    font-size: clamp(2rem, 3vw, 3rem);
    font-weight: 700;
    line-height: 0.9;
    letter-spacing: 0.1em;
    color: #FDFDFD;
    margin: 0;
    text-align: center;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .team-container {
      gap: 3rem;
    }

    .team-grid {
      gap: 3rem 2rem;
    }

    .team-right-column {
      padding-left: 2rem;
    }

    .statement-divider p {
      font-size: clamp(2.5rem, 5vw, 4rem);
    }
  }

  @media (max-width: 768px) {
    .team-container {
      grid-template-columns: 1fr;
      gap: 3rem;
      padding: 0;
    }

    .team-left-column {
      display: flex;
      flex-direction: column;
      align-items: center;
      width: 100%;
      padding: 0 1rem;
    }

    .team-right-column {
      display: none;
    }

    .team-grid {
      grid-template-columns: 1fr;
      gap: 4rem;
      width: 100%;
      display: flex;
      flex-direction: column;
      align-items: center;
    }
  }
</style>
