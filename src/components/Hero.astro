---
// Hero Section - AMIRO Structure
// CENTERED heading with responsive CTA placement:
// - Mobile: Two buttons at TOP
// - Desktop: One CTA at BOTTOM RIGHT
---

<section class="hero" id="hero">
  <div class="hero-background"></div>

  <!-- Mobile CTAs (Top) - Hidden on Desktop -->
  <div class="hero-ctas-mobile">
    <a href="https://booksy.com/privatestudio" target="_blank" rel="noopener noreferrer" class="bottone-scritta">
      Book now
    </a>
    <a href="tel:+1234567890" class="bottone-scritta">
      call us
    </a>
  </div>

  <!-- Main Content - CENTERED -->
  <div class="hero-content">
    <h1 class="hero-headline">
      book<br>now
    </h1>
  </div>

  <!-- Desktop CTA (Bottom Right) - Hidden on Mobile/Tablet -->
  <div class="hero-cta-desktop">
    <a href="https://booksy.com/privatestudio" target="_blank" rel="noopener noreferrer" class="bottone-scritta">
      Schedule your haircut today >
    </a>
  </div>
</section>

<script>
  import { gsap } from 'gsap';

  // Entrance animations
  gsap.from('.hero-headline', {
    scale: 0.9,
    opacity: 0,
    duration: 1.2,
    ease: 'power3.out',
    delay: 0.2
  });

  gsap.from('.hero-ctas-mobile', {
    y: -20,
    opacity: 0,
    duration: 0.8,
    ease: 'power2.out',
    delay: 0.4
  });

  gsap.from('.hero-cta-desktop', {
    x: 20,
    opacity: 0,
    duration: 0.8,
    ease: 'power2.out',
    delay: 0.6
  });
</script>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background: #2F2F2F;
  }

  /* Background with subtle texture */
  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background:
      radial-gradient(circle at 30% 40%, rgba(150, 140, 140, 0.08) 0%, transparent 50%),
      radial-gradient(circle at 70% 60%, rgba(150, 140, 140, 0.05) 0%, transparent 50%),
      #2F2F2F;
    z-index: 0;
  }

  .hero-background::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image:
      repeating-linear-gradient(
        0deg,
        transparent,
        transparent 2px,
        rgba(226, 224, 223, 0.01) 2px,
        rgba(226, 224, 223, 0.01) 4px
      );
    opacity: 0.4;
  }

  /* Mobile CTAs - Top (Hidden on Desktop) */
  .hero-ctas-mobile {
    position: absolute;
    top: var(--spacing-xl);
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: var(--spacing-md);
    z-index: 2;
  }

  /* Main Content - CENTERED */
  .hero-content {
    position: relative;
    z-index: 1;
    text-align: center;
    padding: 0 var(--container-padding);
  }

  .hero-headline {
    font-family: var(--amiro-font-brand);
    font-size: clamp(80px, 15vw, 180px);
    font-weight: 700;
    line-height: 0.85;
    letter-spacing: -0.03em;
    color: #E2E0DF;
    margin: 0;
    text-transform: lowercase;
    will-change: transform, opacity;
  }

  /* Desktop CTA - Bottom Right (Hidden on Mobile/Tablet) */
  .hero-cta-desktop {
    position: absolute;
    bottom: var(--spacing-2xl);
    right: var(--spacing-2xl);
    z-index: 2;
  }

  /* Brand Button Style - bottone-scritta */
  .bottone-scritta {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 14px 28px;
    font-family: var(--amiro-font-body);
    font-size: 14px;
    font-weight: 600;
    color: #E2E0DF;
    background-color: transparent;
    border: 2px solid #E2E0DF;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    transition: all 0.3s ease;
    cursor: pointer;
    white-space: nowrap;
  }

  .bottone-scritta:hover {
    background-color: #E2E0DF;
    color: #2F2F2F;
    transform: translateY(-2px);
  }

  /* RESPONSIVE: Desktop (≥1025px) */
  @media (min-width: 1025px) {
    .hero-ctas-mobile {
      display: none; /* Hide mobile CTAs on desktop */
    }

    .hero-headline {
      font-size: clamp(120px, 12vw, 180px);
    }

    .bottone-scritta {
      font-size: 16px;
      padding: 16px 32px;
    }
  }

  /* RESPONSIVE: Tablet (769px - 1024px) */
  @media (min-width: 769px) and (max-width: 1024px) {
    .hero-ctas-mobile {
      display: none; /* Hide mobile CTAs on tablet */
    }

    .hero-cta-desktop {
      display: none; /* Hide desktop CTA on tablet */
    }

    .hero-headline {
      font-size: clamp(100px, 12vw, 140px);
    }
  }

  /* RESPONSIVE: Mobile (≤768px) */
  @media (max-width: 768px) {
    .hero {
      height: auto;
      min-height: 100vh;
      padding: calc(var(--spacing-xl) * 2) 0 var(--spacing-xl);
    }

    .hero-ctas-mobile {
      display: flex; /* Show mobile CTAs */
      top: var(--spacing-lg);
    }

    .hero-cta-desktop {
      display: none; /* Hide desktop CTA on mobile */
    }

    .hero-content {
      padding: var(--spacing-xl) 22px;
    }

    .hero-headline {
      font-size: clamp(64px, 18vw, 100px);
    }

    .bottone-scritta {
      font-size: 13px;
      padding: 12px 20px;
    }
  }

  /* RESPONSIVE: Small Mobile (≤480px) */
  @media (max-width: 480px) {
    .hero-ctas-mobile {
      flex-direction: row;
      gap: var(--spacing-sm);
    }

    .hero-headline {
      font-size: clamp(56px, 20vw, 80px);
    }

    .bottone-scritta {
      font-size: 12px;
      padding: 10px 16px;
    }
  }

  /* Performance optimization */
  .hero-headline,
  .bottone-scritta {
    will-change: transform, opacity;
  }

  /* Reduced motion support */
  @media (prefers-reduced-motion: reduce) {
    .bottone-scritta {
      transition: none;
    }

    * {
      animation: none !important;
      transition: none !important;
    }
  }

  /* Elementor-style visibility classes */
  .elementor-hidden-mobile {
    display: none;
  }

  @media (min-width: 768px) {
    .elementor-hidden-mobile {
      display: block;
    }
  }

  .elementor-hidden-tablet {
    display: block;
  }

  @media (min-width: 768px) and (max-width: 1024px) {
    .elementor-hidden-tablet {
      display: none;
    }
  }

  .elementor-hidden-desktop {
    display: block;
  }

  @media (min-width: 1025px) {
    .elementor-hidden-desktop {
      display: none;
    }
  }
</style>
